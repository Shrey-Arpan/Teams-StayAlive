{
  "manifest_version": 3,
  "name": "Teams StayAlive Pro",
  "version": "1.0.0",
  "description": "Keep your Microsoft Teams status always active.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "alarms",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://teams.microsoft.com/*",
        "https://teams.live.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "https://teams.microsoft.com/*",
    "https://teams.live.com/*"
  ]
}